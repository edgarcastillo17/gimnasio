@model IEnumerable<Gimnasio.Web.Models.Nutritionist>

<div style="margin-top:100px;padding:50px;">
    <h2 class="text-center display-4">Nutriólogos</h2>
    <br />

    <a href="@Url.Action("Create","Nutritionists")" class="btn btn-sm btn-dark">
        <span class="text-white-50"><i class='bx bx-user-plus'></i></span>
        <span class="text-white"> Añadir</span>
    </a>

    <br />
    <br />

    <div class="row justify-content-center">
        @foreach (var item in Model)
        {
            <div class="card shadow" style="width: 18rem; margin:1rem;">
                <img src="~/Images/Nutritionists/@item.Image" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title font-italic text-center">@item.FirstName @item.LastName</h5>
                </div>
                <div class="card-body text-center">
                    <a href="@Url.Action("Edit","Nutritionists", new { id = item.Id})" class="btn btn-sm btn-primary">
                        <span class="text-white-50"><i class='bx bx-edit-alt'></i></span>
                        <span class="text-white"> Editar</span>
                    </a>
                    <a href="@Url.Action("Delete","Nutritionists", new { id = item.Id})" class="btn btn-sm btn-danger">
                        <span class="text-white-50"><i class='bx bx-trash'></i></span>
                        <span class="text-white"> Eliminar</span>
                    </a>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}