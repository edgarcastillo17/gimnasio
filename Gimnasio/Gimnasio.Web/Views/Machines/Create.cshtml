@model Gimnasio.Web.Models.Machine

<div style="margin-top:100px; padding:50px;">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow" style="width:25rem; margin:1rem;">
                <div class="card-header bg-primary text-white text-center">Añade una máquina</div>
                <form action="@Url.Action("Create","Machines")" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()

                    <div class="card-body">
                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="form-group">
                                <label class="font-weight-bold">Tipo</label>
                                <div class="col-md-10">
                                    <select class="form-control" name="Type">
                                        <option>Elige un tipo:</option>
                                        <option value="Banco press">Banco press</option>
                                        <option value="Prensa de piernas">Prensa de piernas</option>
                                        <option value="Máquina de dorsales">Máquina de dorsales</option>
                                        <option value="Bicicleta estática">Bicicleta estática</option>
                                        <option value="Elíptica">Elíptica</option>
                                        <option value="Cinta de correr">Cinta de correr</option>
                                        <option value="Máquina de remo">Máquina de remo</option>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Brand, htmlAttributes: new { @class = "font-weight-bold" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Brand, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Brand, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Purchase, htmlAttributes: new { @class = "font-weight-bold" })
                                <div class="col-md-10">
                                    <input type="date" name="Purchase" value="" class="form-control" />
                                    @Html.ValidationMessageFor(model => model.Purchase, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="font-weight-bold">Foto</label>
                                <div class="col-md-10">
                                    <input type="file" name="eimage" value="" class="form-control-file" />
                                </div>
                            </div>

                            <div class="form-group text-center">
                                <button class="btn btn-sm btn-primary">
                                    <span class="text-white-50"><i class="fas fa-plus"></i></span>
                                    <span class="text-white"> Guardar</span>
                                </button>

                                <a href="@Url.Action("Index","Machines")" class="btn btn-sm btn-dark">
                                    <span class="text-white-50"><i class="fas fa-arrow-alt-circle-left"></i></span>
                                    <span class="text-white"> Regresar</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}