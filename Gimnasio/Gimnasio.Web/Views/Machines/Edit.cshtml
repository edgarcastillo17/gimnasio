@model Gimnasio.Web.Models.Machine

    <div>
        <div class="row justify-content-center">
            <div class="col-md-4">
                <div class="card shadow" style="width:25rem; margin:1rem;">
                    <div class="card-header bg-dark text-white text-center">Edita una máquina</div>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="card-body">
                            <div class="form-horizontal">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.Id)

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Type, htmlAttributes: new { @class = "font-weight-bold" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Type, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Brand, htmlAttributes: new { @class = "font-weight-bold" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Brand, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Brand, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Purchase, htmlAttributes: new { @class = "font-weight-bold" })
                                    <div class="col-md-10">
                                        <input type="text" name="Purchase" value="@Convert.ToString(string.Format("{0:dd/MM/yyyy}", Model.Purchase))" class="form-control" />
                                        @Html.ValidationMessageFor(model => model.Purchase, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Image, htmlAttributes: new { @class = "font-weight-bold" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Image, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group text-center">
                                    <div class="col-md-offset-2 col-md-10">
                                        <button class="btn btn-sm btn-primary">
                                            <span class="text-white-50"><i class="bx bx-edit-alt"></i></span>
                                            <span class="text-white"> Guardar</span>
                                        </button>
                                        <a href="@Url.Action("AllMachines","Machines")" class="btn btn-sm btn-dark">
                                            <span class="text-white-50"><i class='bx bx-left-arrow-alt'></i></span>
                                            <span class="text-white"> Regresar</span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
