@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li class="nav-item">
            <a class="nav-link text-white" href="@Url.Action("Index","Manage")">¡Hola, @User.Identity.GetUserName()!</a>
        </li>
        <li><a class="nav-link text-white" href="javascript:document.getElementById('logoutForm').submit()">Cerrar sesión</a></li>
    </ul>
    }
}
else
{
<ul class="nav navbar-nav navbar-right">
    <li class="nav-item"><a class="nav-link text-white" y href="@Url.Action("Login","Account")">Ingresar</a></li>
</ul>
}
