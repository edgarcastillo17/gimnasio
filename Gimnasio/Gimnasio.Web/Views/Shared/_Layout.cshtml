<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>Unmir</title>
    <meta content="" name="descriptison">
    <meta content="" name="keywords">


    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/Theme/icofont.min.css" rel="stylesheet">
    <link href="~/Content/Theme/boxicons.css" rel="stylesheet">
    <link href="~/Content/Theme/venobox.css" rel="stylesheet">
    <link href="~/Content/Theme/owl.carousel.css" rel="stylesheet">
    <link href="~/Content/Theme/aos.css" rel="stylesheet">
    <link href="~/Content/Theme/style.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.10.21/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
</head>

<body>

    <div id="topbar" class="d-none d-lg-flex align-items-center fixed-top bg-dark">
        <div class="container d-flex">
            <div class="contact-info mr-auto">
                <i class="icofont-envelope"></i> unmir@unmir.com
                <i class="icofont-phone"></i> +52 664 331 2592
            </div>
            <div class="social-links">
                <a href="https://twitter.com/" target="_blank" class="twitter"><i class="icofont-twitter"></i></a>
                <a href="https://www.facebook.com/" target="_blank" class="facebook"><i class="icofont-facebook"></i></a>
                <a href="https://www.instagram.com/" target="_blank" class="instagram"><i class="icofont-instagram"></i></a>
                <a href="https://www.skype.com/es/" target="_blank" class="skype"><i class="icofont-skype"></i></a>
                <a href="https://mx.linkedin.com/" target="_blank" class="linkedin"><i class="icofont-linkedin"></i></a>
            </div>
        </div>
    </div>

    <header id="header" class="fixed-top bg-dark">
        <div class="container d-flex align-items-center">

            <h1 class="logo mr-auto"><a href="@Url.Action("Index","Home")">Unmir</a></h1>

            <nav class="navbar navbar-expand-lg bg-dark">
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link text-white dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Inicio
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="@Url.Action("Index","Home")">Inicio</a>
                                <a class="dropdown-item" href="#about">Acerca</a>
                                <a class="dropdown-item" href="#services">Servicios</a>
                                <a class="dropdown-item" href="#pricing">Precios</a>
                                <a class="dropdown-item" href="#contact">Contacto</a>
                            </div>
                        </li>

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item"><a class="nav-link text-white" href="@Url.Action("AllClients","Clients")">Clientes</a></li>
                            <li class="nav-item"><a class="nav-link text-white" href="@Url.Action("AllCoaches","Coaches")">Entrenadores</a></li>
                            <li class="nav-item"><a class="nav-link text-white" href="@Url.Action("AllNutritionists","Nutritionists")">Nutriólogos</a></li>
                            <li class="nav-item"><a class="nav-link text-white" href="@Url.Action("AllMachines","Machines")">Máquinas</a></li>
                        }

                        @if (User.IsInRole("Coach"))
                        {
                            <li class="nav-item"><a class="nav-link text-white" href="@Url.Action("Index","Machines")">Máquinas</a></li>
                            <li class="nav-item"><a class="nav-link text-white" href="@Url.Action("ClientByCoach","Clients")">Clientes</a></li>
                        }

                        @if (User.IsInRole("Nutritionist"))
                        {
                            <li class="nav-item"><a class="nav-link text-white" href="@Url.Action("ClientByNutritionist","Clients")">Clientes</a></li>
                        }

                        @if (User.IsInRole("Client"))
                        {
                            <li class="nav-item"><a class="nav-link text-white" href="@Url.Action("Index","Nutritionists")">Nutriólogos</a></li>
                            <li class="nav-item"><a class="nav-link text-white" href="@Url.Action("Index","Coaches")">Entrenadores</a></li>
                            <li class="nav-item"><a class="nav-link text-white" href="@Url.Action("Index","Machines")">Máquinas</a></li>
                        }
                    </ul>
                    <span class="navbar-text">
                        @Html.Partial("_LoginPartial")
                    </span>
                </div>
            </nav>
        </div>
    </header>

    <div>
        @RenderBody()
    </div>

    <footer id="footer">
        <div class="container">
            <div class="copyright">
                &copy; <strong><span>Castillo Medina</span></strong> y <strong><span>Villegas Ramírez</span></strong> 2020
            </div>
        </div>
    </footer>

    <a href="#" class="back-to-top"><i class="icofont-simple-up"></i></a>
    <div id="preloader"></div>

    <script src="~/Scripts/Theme/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/Theme/jquery.easing.min.js"></script>
    <script src="~/Scripts/Theme/validate.js"></script>
    <script src="~/Scripts/Theme/isotope.pkgd.min.js"></script>
    <script src="~/Scripts/Theme/venobox.min.js"></script>
    <script src="~/Scripts/Theme/owl.carousel.min.js"></script>
    <script src="~/Scripts/Theme/aos.js"></script>
    <script src="~/Scripts/Theme/main.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.21/js/dataTables.bootstrap4.min.js"></script>

    @RenderSection("scripts", required: false)
</body>

</html>