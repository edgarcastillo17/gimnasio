<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>Unmir</title>
    <meta content="" name="descriptison">
    <meta content="" name="keywords">


    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/icofont.min.css" rel="stylesheet">
    <link href="~/Content/boxicons.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.10.21/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    <link href="~/Content/Site.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="@Url.Action("Index","Home")">
            <img src="~/Images/Home/logo.png" alt="" style="height:30px;">
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarText">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item dropdown">
                    <a class="nav-link text-white dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Inicio
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="@Url.Action("Index","Home")">Inicio</a>
                        <a class="dropdown-item" href="#about">Acerca</a>
                        <a class="dropdown-item" href="#pricing">Precios</a>
                        <a class="dropdown-item" href="#contact">Contacto</a>
                    </div>
                </li>

                @if (!User.Identity.IsAuthenticated)
                {
                    <li class="nav-item"><a class="nav-link text-white" href="@Url.Action("Index","Nutritionists")">Nutriólogos</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="@Url.Action("Index","Coaches")">Entrenadores</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="@Url.Action("Index","Machines")">Máquinas</a></li>
                }

                @if (User.IsInRole("Admin"))
                {
                    <li class="nav-item"><a class="nav-link text-white" href="@Url.Action("AllClients","Clients")">Clientes</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="@Url.Action("AllCoaches","Coaches")">Entrenadores</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="@Url.Action("AllNutritionists","Nutritionists")">Nutriólogos</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="@Url.Action("AllMachines","Machines")">Máquinas</a></li>
                }

                @if (User.IsInRole("Coach"))
                {
                    <li class="nav-item"><a class="nav-link text-white" href="@Url.Action("Index","Machines")">Máquinas</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="@Url.Action("ClientByCoach","Clients")">Clientes</a></li>
                }

                @if (User.IsInRole("Nutritionist"))
                {
                    <li class="nav-item"><a class="nav-link text-white" href="@Url.Action("ClientByNutritionist","Clients")">Clientes</a></li>
                }
            </ul>
            <span class="navbar-text">
                @Html.Partial("_LoginPartial")
            </span>
        </div>
    </nav>

    <hr />

    <div style="padding-right:50px;padding-left:50px;">
        @RenderBody()
    </div>

    <br />

    <div class="navbar-light text-center border-top">
        <span class="navbar-text text-dark">
            &copy; <strong><span>Castillo Medina</span></strong> y <strong><span>Villegas Ramírez</span></strong> @DateTime.Now.Year
        </span>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.21/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/Scripts/script.js"></script>

    @RenderSection("scripts", required: false)
</body>

</html>